doctype html
html(lang="ja")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title AVM - Sound Recorder
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
        link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel="stylesheet", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous")
        link(rel="stylesheet" href="./main.css")
    body
        nav.navbar.navbar-static-top.navbar-inverse
            .container
                a.navbar-brand(href="/")
                    i.fa.fa-microphone
                    |&nbsp; AVM - Sound Recorder

        .container
            .row
                .col-sm-6
                    h3.page-header
                        i.fa.fa-microphone
                        |&nbsp; Sound Recorder
                    .panel.panel-default
                        .panel-body
                            object.swf-object#sound-recorder(
                                type="application/x-shockwave-flash"
                                data="avm.swf"
                                width="552"
                                height="300"
                            )
                                param(name="quality" value="high")
                                param(name="bgcolor" value="#cccccc")
                                param(name="allowscriptaccess" value="sameDomain")
                                param(name="allowfullscreen" value="true")
                                param(name="FlashVars" value="callbackNamespace=soundRecorder&debugMode=true")
                        footer.panel-footer
                            button.btn.btn-default#setup
                                i.fa.fa-cog
                                |&nbsp; Setup
                            .btn-group
                                button.btn.btn-default#record-start
                                    i.fa.fa-circle.text-danger
                                    |&nbsp; Rec
                                button.btn.btn-default#record-stop
                                    i.fa.fa-square
                                    |&nbsp; Stop
                            hr
                            .player
                                .player__col.player__col--recorded-list
                                    select.form-control.recorded-list#recorded-list
                                .player__col
                                    .btn-group
                                        button.btn.btn-default#sound-play
                                            i.fa.fa-play.text-primary
                                            |&nbsp; Play
                                        button.btn.btn-default#sound-stop
                                            i.fa.fa-square
                                            |&nbsp; Stop

                .col-sm-6
                    h3.page-header
                        i.fa.fa-list-alt
                        |&nbsp; Log
                    .card.card-block
                        pre.log#log


        script(src="./main.js")
